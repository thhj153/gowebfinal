<!DOCTYPE html>
<html lang="en">
<style>
  .control-group {
    font-family: 'YESerif';
    margin-bottom: 5px;
  }

  .form-group {
    font-family: 'YESerif' !important;
    font-size: '1rem' !important;
  }

  .form-control {
    font-family: 'YESerif' !important;
    font-size: 18px !important;
    line-height: 180% !important;
  }

</style>
<%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="page-heading">
                <h1>New Post</h1>
              </div>
            </div>
          </div>
        </div>
      </header>
      <%- include('layouts/categorybar'); -%>
      
        <!-- Main Content -->
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <!-- for browser to know tha tthe form contains mutli media. will encripy multie media and send to server -->
              <form action="/posts/store" method="POST" enctype="multipart/form-data" style="font-family: 'YESerif'; ">

                <div class="control-group">
                  <div class="form-group floating-label-form-group controls">
                    <label>Title</label>
                    <input type="text" class="form-control" placeholder="Title" id="title" name="title" />
                  </div>
                </div>

                <div class="control-group">
                  <div class="form-group floating-label-form-group controls">
                    <label>Description</label>
                    <textarea rows="5" class="form-control" id="body" name="body"></textarea>
                  </div>
                </div>

                <% if(admin){ %>
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label>Is Notice</label>
                      <input type="checkbox" name="notice" id="notice" style="width: 11px; height: 11px; font-size: 1rem;"/>
                      &nbsp; <span style="font-size: 18px;">공지사항</span> </input>
                    </div>
                  </div>
                <% } %>

                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label style="z-index: -5; margin-bottom: 3px;">Category</label>
                      <select name="category" id="category" class="navbar-toggler"
                        style="font-size: 1rem; width: 250px;">
                        <% for (var i=0; i < categories.length; i++) { %>
                          <option value=<%=categories[i]._id%>>
                            <%=categories[i].name%>
                          </option>
                          <% } %>
                      </select>
                    </div>
                  
                  <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                      <label> Background Image</label>
                      <input type="file" class="form-control" style="font-size: 1rem !important;"
                        id="image" name="image" style=/>
                    </div>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary float-right" id="sendMessageButton" class="navbar-toggler"
                      style="margin-top: 0.5rem;">
                      Send
                    </button>
                  </div>
              </form>
            </div>
          </div>
        </div>

        <hr />
        <%- include('layouts/footer'); -%>
          <%- include('layouts/scripts'); -%>
  </body>

</html>