<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%>

    <!-- Page Header -->
    <header
      class="masthead"
      style="background-image: url('/img/contact-bg.jpg')"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Modify Post</h1>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <!-- for browser to know tha tthe form contains mutli media. will encripy multie media and send to server -->
          <form
            action="/posts/store"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Title</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Title"
                  id="title"
                  name="title"
                  value="<%=blogpost.title %>"
                />
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Description</label>
                <textarea rows="5" class="form-control" id="body" name="body">
<%=blogpost.body %></textarea
                >
              </div>
            </div>
            <% if(admin){ %> <% if(blogpost.notice){%>
            <input type="checkbox" name="notice" id="notice" checked />
            <% }else{ %>
            <input type="checkbox" name="notice" id="notice" unchecked />
            <% } %> 공지사항 <% } %>
            <select name="category" id="category">
              <% for (var i=0; i < categories.length; i++) { %> <%
              if(blogpost.category._id == categories[i]._id.toString()) {%>
              <option value="<%= blogpost.category._id %>" selected="selected">
                <%= categories[i].name %>
              </option>
              <% }else{ %>

              <option value="<%= categories[i]._id%>">
                <%=categories[i].name%>
              </option>
              <% } %> <% } %>
            </select>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                />
              </div>
            </div>

            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary"
                id="sendMessageButton"
              >
                Send
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <hr />
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
