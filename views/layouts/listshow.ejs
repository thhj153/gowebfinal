<div class="container">
    <div class="row">
        
        <div style="position: sticky; float: left; margin-left: auto; 
        margin-right: -10px; width: 250px; height: inherit; overflow-y: auto; vertical-align: baseline;
        background-color: aqua; "> </div>
        
        <div class="col-lg-8 col-md-10 mx-auto">
            <% for (var i=0; i < blogposts.length; i++) { %>
            <div class="post-preview">
                <a href="/post/<%= blogposts[i]._id %>">
                    <h2 class="post-title"> <%= blogposts[i].title %> </h2>
                </a>
                
                    <% var y, m, d %>
                    <% y = blogposts[i].datePosted.getYear() + 1900 %>
                    <% if (blogposts[i].datePosted.getMonth()+1 < 10 ) {%>
                    <% m = '0'+String( blogposts[i].datePosted.getMonth()+1 )%>
                    <% } else { m = blogposts[i].datePosted.getMonth()+1 } %>
                    <% if (blogposts[i].datePosted.getDay() < 10 ) { %>
                    <% d = '0'+String( blogposts[i].datePosted.getDay() )%>
                    <% } else { d = blogposts[i].datePosted.getDay() } %>

                <p class="post-meta">
                By: <a href="#"><%= blogposts[i].userid.username %></a> </br>
                Date: <%=y%>-<%=m%>-<%=d%>
                </p>
            </div>
            <hr />
        <% } %>
        <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr />