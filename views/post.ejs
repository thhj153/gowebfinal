<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%>
    
      <!-- Page Header -->
      <header class="masthead" style="background-image: url('<%= blogpost.image %>')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1>
                  <%= blogpost.title %>
                </h1>

                <span class="meta">Posted by
                  <a href="#">
                    <%= blogpost.userid.username %>
                  </a>
                  on <%= blogpost.datePosted.toDateString() %>
                <hr style="border-color: aliceblue;"></hr>
                </span>

                <span class="meta">
                <% if (blogpost.body.length>= 70) { %>
                  <h2 class="subheading"
                  style="font-size: 18px;
                  font-weight: 100 !important;
                  font-style: italic !important; 
                  font-family: 'Times New Roman', Times, serif !important;">
                    <%= blogpost.body.substring(0, 70) + " ……" %>
                  </h2>
                  <% } else {%>
                    <%= blogpost.body %>
                    <% } %>

                  </span>
                  

                  
              </div>
              
            </div>
            
          </div>
          
        </div>
        
      </header>
      <%- include('layouts/categorybar'); -%>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto"><%= blogpost.body %></div>
        </div>
      </div>
    </article>
    <a href="/post/update" class="btn btn-primary">MODIFY</a>
    <!-- <% if( blogpost.userid === userInfo._id ){ %> <%
    console.log(blogpost,userInfo); %> -->
    <!-- <% } %> -->
    <hr />
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>

</html>