<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('<%= blogpost.image %>')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h2>
                  <%= blogpost.title %>
                </h2>

                <span class="meta" style="font-size: 17px;">Posted by
                  <a href="#">
                    <%= blogpost.userid.username %>
                  </a>
                  on <%= blogpost.datePosted.toDateString() %>
                    <hr style="border-color: aliceblue;">
                    </hr>
                </span>

                <span class="meta">
                  <% if (blogpost.body[0].length>= 70) { %>
                    <h2 class="subheading" style="font-size: 18px; line-height: 180%; margin-top: -9px;
                    font-style: normal !important; font-weight:normal !important;">
                      <%= blogpost.body[0].substring(0, 100) + " ⋯⋯" %>
                    </h2>
                    <% } else {%>
                      <%- blogpost.body[0] -%>
                        <% } %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <%- include('layouts/categorybar'); -%>

        <!-- Post Content -->
        <article>
          <div class="container">
            <div class="row">

              <%- include('layouts/leftcategory'); -%>
              
              <div class="col-lg-8 col-md-10 mx-auto" style="font-size: 14px; font-family: 'YESerif'; line-height: 175%">
                <% for (var i=0; i < blogpost.body.length; i++) { %>
                  <%= blogpost.body[i] %>
                  <div style="height: 16px;"></div>
                <% } %>
              </div>
            </div>
            <div class="container" style="position: relative; width:max-content;">
            </br>

            <%/* if (blogpost.userid==userInfo._id.toString() ){ */%>
              <a href="/posts/modify" class="btn btn-primary post" >MODIFY</a>
              <a href="/posts/delete" class="btn btn-primary post" >DELETE</a>
              <%/* } */%>

            </div>
            <%- include('layouts/comment'); -%>
                <form action="/comment/store" method="POST" enctype="multipart/form-data" style="font-family: 'YESerif'; ">
                                  <div class="control-group">
                                    <div class="form-group floating-label-form-group controls">
                                      <label>Description</label>
                                      <textarea rows="1" class="form-control" id="body" name="body"></textarea>
                                    </div>
                                  </div>
                                    <div class="form-group">
                                      <button type="submit" class="btn btn-primary float-right" id="sendMessageButton" class="navbar-toggler"
                                        style="margin-top: 0.5rem;">
                                        Send
                                      </button>
                                    </div>
                </form>
            </div>
          </div>
        </article>
        <hr />
        <%- include('layouts/footer'); -%>
          <%- include('layouts/scripts'); -%>
  </body>

</html>